{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "buildCommand": "mix do local.hex --force, local.rebar --force, deps.get --only prod, compile"
  },
  "deploy": {
    "startCommand": "mix nex.start",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "restartPolicyType": "ON_FAILURE"
  }
}
